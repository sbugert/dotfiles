#!/usr/bin/env bash

# get random emoji (But... why?)
# source: http://unicode.org/Public/emoji/1.0/emoji-data.txt
_getRandomEmoji() {
  local -a emojis=(
    # animals
    '🐀' '🐁' '🐂' '🐃' '🐄' '🐅' '🐆' '🐇' '🐈' '🐉'
    '🐊' '🐋' '🐌' '🐍' '🐎' '🐏' '🐐' '🐑' '🐒' '🐓'
    '🐔' '🐕' '🐖' '🐗' '🐘' '🐙' '🐚' '🐛' '🐜' '🐝'
    '🐞' '🐟' '🐠' '🐡' '🐢' '🐣' '🐤' '🐥' '🐦' '🐧'
    '🐨' '🐩' '🐪' '🐫' '🐬' '🐭' '🐮' '🐯' '🐰' '🐱'
    '🐲' '🐳' '🐴' '🐵' '🐶' '🐷' '🐸' '🐹' '🐺' '🐻'
    '🐼' '🐽' '🐾'
    # food
    '🍄' '🍅' '🍆' '🍇' '🍈' '🍉' '🍊' '🍋' '🍌' '🍍'
    '🍎' '🍏' '🍐' '🍑' '🍒' '🍓' '🍔' '🍕'
    '🍘' '🍙' '🍚' '🍛' '🍜' '🍝' '🍞' '🍟' '🍠' '🍡'
    '🍢' '🍥' '🍦' '🍧' '🍨' '🍩' '🍪' '🍫'
    '🍬' '🍭' '🍮' '🍯' '🍰' '🍱' '🍲' '🍳' '🍴' '🍵'
    '🍶' '🍷' '🍸' '🍹' '🍺' '🍻' '🍼' '🎂'
    # ... things
    '🐏 💨' '💩'
  )

  echo ${emojis[RANDOM % ${#emojis[@]}]}
}
